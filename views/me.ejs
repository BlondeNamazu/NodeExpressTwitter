<!DOCTYPE html>
<html>
  <head>
    <title><%= session.user.name %>'s page</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <p>Hello, <%= session.user.name %>!</p>
    <img src="<%= session.user.profile_image_url %>" >
    <p>Your Twitter ID : <%= session.user.screen_name %></p>
    <textarea id="tweet-content" cols="30" rows="5" maxlength="140" placeholder="type your tweet!"></textarea>
    <br>
    <script>
      function tw(){
        var textbox = document.getElementById("tweet-content");
        var value = "/tweet/" + textbox.value;
        console.log(value);
        textbox.value = "";
        location.href = value;
      }
    </script>
    <button onclick="tw()">tweet!</button>
  </body>
</html>

